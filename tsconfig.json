{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"], // This fixes the 'console' and 'process' errors
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["./src/config"],
      "@middlewares": ["./src/middlewares/"],
      "@service": ["./src/service/"],
      "@controllers": ["./src/controller"],
      "@routes": ["./src/routes"],
      "@models/*": ["./src/models/*"],
      "@utils": ["./src/utils"],
      "@types": ["./src/types"],
      "@validators": ["./src/validators"],
      "@fsm/*": ["./src/fsm/*"],
      "@events": ["./src/events"]
    }
  },
  "include": ["src/**/*.ts", "index.ts", "src/types/**/*.d.ts", "src/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
